# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Optional: Service Role Key (only for server-side operations)
# SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Storage Provider: "supabase" or "r2" (default: supabase)
NEXT_PUBLIC_STORAGE_PROVIDER=supabase

# Cloudflare R2 Configuration (required if STORAGE_PROVIDER=r2)
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=your_r2_bucket_name
NEXT_PUBLIC_R2_PUBLIC_URL=https://pub-xxx.r2.dev
